from imports import *


def questionnaire_upd(arg):
  res = requests.post('http://localhost:9103/admin/questionnaire_upd',
                      headers=find_key(),
                      files=arg.source,
                      verify=False)
  return True


parser = argparse.ArgumentParser()
parser.add_argument('--source',
                    help='Select a questionnaire .json file to upload',
                    required='TRUE')
parser.add_argument('--format',
                    choices=['csv', 'json'],
                    help='Select json or csv format',
                    required='TRUE')
#TODO fix source if needed with JSON
args = parser.parse_args()

questionnaire_upd(args)
