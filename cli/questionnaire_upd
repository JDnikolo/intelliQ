from imports import *


def questionnaire_upd(arg):
  url = 'http://localhost:5000/admin/questionnaire_upd'

  res = requests.post(url,
                      headers=find_key(),
                      files={'a': open(arg.source,'rb')},
                      verify=False)
  print(res)
  #print(res.json())
  return True


parser = argparse.ArgumentParser()
parser.add_argument('--source',
                    help='Select a questionnaire .json file to upload',
                    required='TRUE')
#TODO fix source if needed with JSON
args = parser.parse_args()
questionnaire_upd(args)
